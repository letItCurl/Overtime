<tr>
	<td>
		<%= post.id %>
	</td>
	<td>
		<%= link_to post.overtime_request, post_path(@posts)  %>
	</td>
	<td>
		<%= truncate post.rationale %>
	</td>
	<td>
        <%= post.date %>
	</td>
	<td>
        <%= truncate post.user.full_name %>
	</td>
	<td>
		<%= status_label post.status %>
	</td>
	<td>
		<%= link_to "Show" , post_path(post.id), id: "show_#{post.id}"%> |
		<%= link_to "Edit |" , edit_post_path(post.id), id: "edit_#{post.id}" if policy(post).update? %> 
		<%= link_to "Delete" , post_path(post.id), method: :delete, data: {confirm: "are you shure ?"} , id: "delete_post_#{post.id}_link"%>
	</td>
</tr>

