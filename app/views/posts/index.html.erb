<h1>Posts</h1>
<table class="table table-hover table-bordered">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Rationale
			</th>
			<th>
				Date
			</th>
			<th>
                User
			</th>
		</tr>
	</thead>
    <tbody>
        <% @posts.each do |p|%>
            <tr>
				<td>
					<%= p.id %>
				</td>
				<td>
					<%= truncate p.rationale %>
				</td>
				<td>
                    <%= p.date %>
				</td>
				<td>
                    <%= p.user.first_name %>
				</td>
			</tr>
        <% end %>
    </tbody>
</table>