<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], :title => "alert notification", :sticky => false, time: 2000) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], :title => "error notification", :sticky => false, time: 2000) %>
<% else %>
    <%= js add_gritter(flash[:notice], :title => "notice notification", :sticky => false, time: 2000) %>
<% end %>